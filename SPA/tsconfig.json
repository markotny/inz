{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"module": "esnext",
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "es2015",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2018", "dom", "esnext.asynciterable"],
		"paths": {
			"@env/*": ["environments/*"],
			"@gql/*": ["graphql/*"],
			"@core/*": ["app/core/*"],
			"@shell/*": ["app/shell/*"],
			"@shared/*": ["app/shared/*"],
			"@modules/*": ["app/modules/*"],
			"@services/*": ["app/services/*"]
		}
	},
	"angularCompilerOptions": {
		"fullTemplateTypeCheck": true,
		"strictInjectionParameters": true
	}
}
